#spécification de la box (image) pour créer la vm
Vagrant.configure("2") do |config|
  # Common configuration
  config.vm.box = "hashicorp-education/ubuntu-24-04"
  config.vm.box_version = "0.1.0"
end

#installer Docker 
  config.vm.provision "shell", name: "install-docker", path: "install-docker.sh"

#installer Ansible + exécution fichier.yaml
  config.vm.provision "shell", name: "install-ansible", path: "install-ansible.sh"






